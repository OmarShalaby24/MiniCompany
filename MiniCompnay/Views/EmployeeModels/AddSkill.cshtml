@model MiniCompnay.Models.EmployeeSkillModel

@{
    ViewData["Title"] = "Add Skill";

}

<h1>Add Skills</h1>

<h4>Employee</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row">
                @foreach (var item in ViewBag.Employee)
                {
                    <dt class="col-sm-10">
                        @item.Name
                    </dt>
                }
                @foreach (var item in ViewBag.Employee)
                {
            <dt class="col-sm-10">
                @item.Email
                <input type="hidden" name="EmployeeID" id="EmployeeID" value="@ViewData["id"]" />
            </dt>
                }
                
            </dl>
            
            <div class="form-group">

                @*@Html.ListBoxFor(s => s.SkillID, (IEnumerable<SelectListItem>)ViewData["Skills"], new { @class = "form-control" })*@
                @Html.ListBox("SkillIDs", (MultiSelectList)ViewBag.Skills, new { @class="form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>


                        

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
