@model MiniCompnay.Models.EmployeeSkillModel
@{
    ViewData["Title"] = "Create";


}

<h1>Create</h1>

<h4>EmployeeSkillModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employees" class="control-label"></label>
                <div>
                    @Html.DropDownListFor(e => e.EmployeeID , (IEnumerable<SelectListItem>)ViewData["Employees"], new { @class="form-control"})
                </div>
                
            </div>
            <div class="form-group">
                <label asp-for="Skills" class="control-label"></label>
                <div>
                    @*@Html.DropDownListFor(e => e.SkillID, (IEnumerable<SelectListItem>)ViewData["Skills"], new { @class="form-control"})*@
                    @Html.ListBoxFor(s => s.SkillID, (IEnumerable<SelectListItem>)ViewData["Skills"], new { @class="form-control"})
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
